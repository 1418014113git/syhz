  <repositories>
    <repository>
      <id>myRepositories</id>
      <name>myRepositories</name>
      <url>http://192.168.43.32:8081/repository/public/</url>
    </repository>
  </repositories>
    <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>com.ngmhr.syhz</groupId>
